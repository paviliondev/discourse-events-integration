{{#events-integration-header view=view message=message}}
  {{d-button
    id="add-connection"
    action=(action "addConnection")
    label="admin.events_integration.connection.add.label"
    title="admin.events_integration.connection.add.title"
    icon="plus"}}
{{/events-integration-header}}

<div class="admin-events-integration-container">
  {{#if hasConnections}}
    <table>
      <thead>
        <tr>
          <th>{{I18n "admin.events_integration.connection.user"}}</th>
          <th>{{I18n "admin.events_integration.connection.category"}}</th>
          <th>{{I18n "admin.events_integration.connection.source.label"}}</th>
          <th>{{I18n "admin.events_integration.connection.client.label"}}</th>
          <th class="action-column">{{I18n "admin.events_integration.actions"}}</th>
        </tr>
      </thead>
      <tbody>
        {{#each connections as |connection|}}
          {{events-integration-connection-row
            connection=connection
            sources=sources
            removeConnection=(action "removeConnection")
            setMessage=(action "setMessage")}}
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>{{i18n "admin.events_integration.connection.none"}}</p>
  {{/if}}
</div>
